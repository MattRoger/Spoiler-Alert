extends layout.pug

block content
    section#content
        .newUserWrapper.wrapper
            .newUserInnerWrapper
                #welcome
                    h2 Welcome To Spoiler Alert!
                    p A place to talk about your favorite movies without fear of spoiling it for your friends!
                #agreement
                    p By creating an account you agree to our terms and conditions
                #inputForm
                    form#newUser
                        label Create a User Name!
                        input(
                            type="text"
                            name="userName"
                            placeholder="Create A User Name"
                                )
                        label Please enter your email
                        input(
                            type="email"
                            name="email"
                            placeholder="Your email"
                                )
                        label Make a Password
                        input(
                            type="password"
                            placeholder="Password"
                            name="password"
                                )
                        label Confirm Password
                        input(
                            type="password"
                            name="passwordConfirm"
                            placeholder="Confirm Password"
                                )
                        button#createNewUser Join!    
                        #createProfile
                            label Your Top Movies!
                        input(
                            type="text"
                            name="topMovie1"
                            placeholder="#1"
                                )
                        input(
                            type="text"
                            name="topMovie2"
                            placeholder="#2"
                                )
                        input(
                            type="text"
                            name="topMovie3"
                            placeholder="#3"
                                )
                        input(
                            type="text"
                            name="topMovie4"
                            placeholder="#4"
                                )
                        input(
                            type="text"
                            name="topMovie5"
                            placeholder="#5"
                                )
                        label Your Least Favorite Movies!
                        input(
                            type="text"
                            name="bottomMovie1"
                            placeholder="#1"
                                )
                        input(
                            type="text"
                            name="bottomMovie2"
                            placeholder="#2"
                                )
                        input(
                            type="text"
                            name="bottomMovie3"
                            placeholder="#3"
                                )
                        input(
                            type="text"
                            name="bottomMovie4"
                            placeholder="#4"
                                )
                        input(
                            type="text"
                            name="bottomMovie5"
                            placeholder="#5"
                                )
                        button#profileCreateButton Next


